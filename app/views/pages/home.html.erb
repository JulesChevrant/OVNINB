<div id="home">
  <div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path('milky.jpg') %>')">
    <div class="container">
      <h1 class="titre-recherche">Reservez votre soucoupe volante</h1>
      <%= simple_form_for :search, url: ovnis_path, method: :get do |f| %>
        <div class="search-form-control form-group d-flex">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-primary mt-0 d-flex align-items-center">
            <%= link_to "Search", ovnis_path %><i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>

<div class="d-flex justify-content-center mt-5 mb-4 titre-recommande"><h2>Des idées pour votre prochain voyage :</h2></div>

<div class="card-container-new">
  <% @ovnis.each do |ovni| %>
    <%= link_to(ovni_path(ovni), class: "card-link") do %>
      <div class="super-card">
        <div class="super-div-img">
          <%= cl_image_tag(ovni.photo.key, crop: :fill) %>
        </div>
        <div class="container-new-card">
          <h4><%= ovni.name %></h4>
          <p><%= ovni.price%></p>
          <p><%= ovni.details %></p>
          <p class="btn-louer">Louer</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>



