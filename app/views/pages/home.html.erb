<div id="home">
  <div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path('milky.jpg') %>')">
    <div class="container">
      <h1>Reservez votre soucoupe volante</h1>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group d-flex">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-primary mt-0 d-flex align-items-center">
            <%= link_to "Search", ovnis_path %><i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-container">
    <% @ovnis.each do |ovni| %>
      <div class="card">
        <header class="card-header header-img">
          <%= cl_image_tag(ovni.photo.key, crop: :fill, class: "card-img-top") %>
          <p class="header-title"><%= ovni.name %></p>
        </header>
        <div class="card-body"><%= ovni.price%>€</div>
        <div class="card-footer">
          <button class="btn btn-card mt-3"><%= link_to "Plus d'infos", ovni_path(ovni) %></button>
        </div>
      </div>
    <% end %>
  </div>

  <div class="btn-index d-flex align-items justify-content-between mt-5 mb-5">
    <h4>Découvre l'ensemble des vaisseaux de ta région</h4>
    <button class="btn-all"><%=link_to "Voir tous nos vaissaux", ovnis_path%></button>
  </div>
</div>
