  <div class="d-flex justify-content-center">
    <h2 class="titre-index-ovni p-4">Ovnis</h2>
  </div>

  <%= simple_form_for :search, url: ovnis_path, method: :get do |f| %>
          <div class="search-form-control form-group d-flex mb-5">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-primary mt-0 d-flex align-items-center">
              <%= link_to "Search", ovnis_path %><i class="fas fa-search"></i>
            </button>
            <% end %>
          </div>


  <div class="d-flex justify-content-center card-container-index" style="flex-wrap: wrap;">
    <% @ovnis.each do |ovni| %>
      <%= link_to(ovni_path(ovni),cloud_name: :dukcncnld, class: "card-link") do %>
        <div class="super-card">
          <div class="super-div-img" style="height: 60%">
            <%= cl_image_tag(ovni.photo.key,cloud_name: :dukcncnld, crop: :fill)%>
          </div>
          <div class="container-new-card">
            <h4><%= ovni.name %></h4>
            <p><%= ovni.price%></p>
            <p><%= ovni.details %></p>
            <p class="btn-louer">Louer</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-5">
    <br>
    <%= link_to new_ovni_path do %>
      <i class="fa fa-plus"></i> Louer un nouvel ovni
    <% end %>
  </div>
