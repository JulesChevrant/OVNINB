<div class="d-flex justify-content-center">
  <h2 class="titre-index-ovni p-4">Ovnis</h2>
</div>

<%= simple_form_for :search, url: ovnis_path, method: :get do |f| %>
        <div class="search-form-control form-group d-flex">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-primary mt-0 d-flex align-items-center">
            <%= link_to "Search", ovnis_path %><i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
<% @ovnis.each do |ovni| %>
  <div class="card-product">
    <%= cl_image_tag(ovni.photo.key, crop: :fill, class: "card-img-top") %>
    <div class="card-product-infos">
      <h2 class="name">
        <%= link_to ovni.name, ovni_path(ovni) %>
      </h2>
      <p><%= ovni.details %></p>
      <p class="ovni-price"><strong><%= ovni.price%> â‚¬</strong></p>
    </div>
  </div>
<% end %>

<%= link_to new_ovni_path do %>
  <i class="fa fa-plus"></i> Add a new ovni
<% end %>
